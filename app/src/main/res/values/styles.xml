<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="homeAsUpIndicator">@drawable/ic_menu_24dp</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="DetailsTheme" parent="AppTheme">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:textSize">@dimen/tvToolbar</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StyleOrderTitle">
        <item name="android:textSize">@dimen/tvOrderTitle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StyleOrderCost">
        <item name="android:textSize">@dimen/tvOrderCost</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StyleOrderTiming">
        <item name="android:textSize">@dimen/tvOrderTiming</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StyleOrderBtn">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/tvOrderTitle</item>
    </style>

    <style name="StyleOrderTitling">
        <item name="android:textSize">@dimen/tvOrderTitling</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleOrderXchangeText">
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textSize">@dimen/tvSmall</item>
    </style>

    <style name="StyleTextTitle">
        <item name="android:textSize">@dimen/tvMedium</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleItemTextTicketNum">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:textSize">@dimen/tvLarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleItemText">
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:textSize">@dimen/tvSmall</item>
    </style>

    <style name="StyleItemTextBold">
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:textSize">@dimen/tvSmall</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
