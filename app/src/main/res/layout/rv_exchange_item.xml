<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/marginSides"
    android:layout_marginEnd="@dimen/marginSides"
    android:layout_marginBottom="@dimen/marginTopBot"
    android:layout_marginTop="@dimen/marginTopBot"
    android:background="@drawable/bg_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNum"
        style="@style/StyleItemTextTicketNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="12dp"
        android:text="№ 201245123" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            style="@style/StyleItemTextBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AKHMETOV" />

        <ImageView
            android:id="@+id/imgType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_flight_24dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvDescription"
        style="@style/StyleOrderXchangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="4dp"
        android:text="Страхование жизни
20.12.2016 - 31.12.2016" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_black_24dp" />

        <TextView
            android:id="@+id/tvPass"
            style="@style/StyleItemText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Отказано" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/StyleItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="23.10.2016" />
    </LinearLayout>
</LinearLayout>